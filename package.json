{
  "name": "gerenciador-eventos-qr",
  "version": "1.0.0",
  "description": "Sistema de gerenciamento de eventos com confirmação de presença via QR Code",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm start",
    "dev:legacy": "concurrently \"npm run dev:backend:legacy\" \"npm run dev:frontend\"",
    "dev:backend:legacy": "cd backend && npm run dev:legacy",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "build": "cd frontend && npm run build",
    "start": "cd backend && npm start",
    "start:legacy": "cd backend && npm run start:legacy"
  },
  "keywords": [
    "eventos",
    "qr-code",
    "checkin",
    "react",
    "nodejs"
  ],
  "author": "Sistema de Eventos",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "@dnd-kit/modifiers": "^9.0.0",
    "react-dev-utils": "^12.0.1"
  }
}
